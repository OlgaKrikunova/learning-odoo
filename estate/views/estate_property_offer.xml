<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate_property_offer.reason.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Offers"  editable="bottom" decoration-success="status == 'accepted'"
                  decoration-danger="status == 'refused'" decoration-warning="status == 'expired'"
                  decoration-muted="status == 'draft'"  decoration-info="has_activity">
                <field name="create_date"/>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="status"/>
                <button name="action_accept"
                        string="accept"
                        type="object"
                        icon="fa-check"
                        class="btn-secondary"
                        invisible="status in ('accepted', 'refused')"/>
                <button name="action_refuse"
                        string="refuse"
                        type="object"
                        icon="fa-times"
                        class="btn-secondary"
                        invisible="status in ('accepted', 'refused')"/>
                <button name="action_view_activities" type="object" icon="fa-bell" class="oe_stat_button"
                        string="Activity" help="View related activities"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <field name="status"/>

                </sheet>
            <chatter/>

            </form>
        </field>
    </record>


    <record id="estate_property_offer_search" model="ir.ui.view">
        <field name="name">estate.property.offer.search</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <search string="Search Offers">
                <field name="partner_id"/>
                <field name="status"/>
                <field name="price"/>
                <field name="validity"/>
                <field name="date_deadline"/>
            </search>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

</odoo>
