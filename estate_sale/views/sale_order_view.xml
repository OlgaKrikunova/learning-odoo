<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_view_inherit_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="internal_note"/>
            </xpath>
             <xpath expr="//button[@name='action_quotation_send']" position="after">
                 <button name="send_internal_email" type="object" string="Send Internal Email" class="btn-secondary"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_view_inherit_tree" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="decoration-danger">is_big_order</attribute>
                 <attribute name="decoration-bf">is_big_order</attribute>
            </xpath>
        </field>
    </record>

</odoo>
