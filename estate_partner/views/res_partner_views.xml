<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_partner_view_inherit_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='comment']" position="after">
                <field name="manager_comment"/>
            </xpath>
            <xpath expr="//page[@name='internal_notes']/field[@name='comment']" position="replace">
                <group>
                    <field name="manager_comment" placeholder="Manager comment..."/>
                    <field name="comment" placeholder="Internal notes..."/>
                </group>
            </xpath>
            <xpath expr="//field[@name='parent_id']" position="after">
                <group>
                    <field name="is_vip" widget="boolean_toggle"/>
                </group>

            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="res_partner_kanban_view_inherit">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="inside">
                <field name="is_vip"/>
            </xpath>
            <xpath expr="//field[@name='display_name']" position="after">
                <div invisible="not is_vip" class="oe_kanban_vip badge badge-success"
                     style="margin: 4px; background-color: #fcf80d; color: black; font-weight: bold;">
                    VIP
                </div>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="attributes">
                <attribute name="invisible">not mobile</attribute>
            </xpath>
        </field>
    </record>

</odoo>
