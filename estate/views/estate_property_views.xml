<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate_property.reason.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list decoration-info="state=='offer_received'"
                  decoration-warning="state=='offer_accepted'"
                  decoration-bf="state=='sold'"
                  decoration-success="state=='sold'"
                  decoration-primary="state=='new'"
                  decoration-danger="state=='cancelled'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="construction_year"/>
                <field name="age"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="average_offer_price"/>
                <field name="date_availability" optional="hide"/>
                <field name="sold_date" optional="hide"/>
                <field name="property_type_id"/>
                <field name="salesman_id"/>
                <field name="buyer_id"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="total_area"/>
                <field name="best_price"/>
                <field name="offer_count"/>
                <field name="unique_number"/>
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate_property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <button name="estate_property_action_sold" type="object" string="Sold" class="btn-secondary"
                            if="state not in ('sold', 'cancelled')" invisible="state in ('sold', 'cancelled')"/>
                    <button name="estate_property_action_cancel" type="object" string="Cancel" class="btn-secondary"
                            if="state not in ('sold', 'cancelled')" invisible="state in ('sold', 'cancelled')"/>
                    <button name="action_apply_discount" string="Apply 10% Discount" type="object"
                            class="btn-primary" invisible="discount_applied"/>
                    <button name="cancel_apply_discount" string="Cancel Discount" type="object" class="btn-primary"
                            invisible="not discount_applied"/>
                    <button name="action_accept_highest_offer" string="Accept highest offer" type="object"
                            class="btn-primary" invisible="accept_highest_offer"/>
                    <button name="cancel_accept_highest_offer" string="Cancel highest offer" type="object"
                            class="btn-primary" invisible="not accept_highest_offer"/>

                    <button name="action_is_favourite" string="Mark as Favourite" type="object"
                            class="btn-primary" icon="fa-star" invisible="is_favourite"/>
                    <button name="action_is_favourite" string="Unmark Favourite" type="object"
                            class="btn-warning" invisible="not is_favourite"
                    />

                    <field name="state" widget="statusbar" statusbar_visible="new, offer_received,
                                    offer_accepted, sold"/>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="unique_number" readonly="1"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="property_type_id" options='{"format": false}' decoration-success="offer_ids"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="sold_date"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                            <field name="average_offer_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field name="description"/>
                                    <field name="construction_year" widget="char"/>
                                    <field name="age"/>
                                    <field name="bedrooms"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="state"/>
                                </group>
                                <group>
                                    <field name="living_area"/>
                                    <field name="garden"/>
                                    <field name="garden_orientation" invisible="not garden"/>
                                    <field name="garden_area" invisible="not garden"/>
                                    <field name="total_area"/>
                                </group>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesman_id"/>
                                <field name="buyer_id"/>
                                <field name="company_id"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <div>
                                <span>Offers count: </span>
                                <field name="offer_count" widget="badge"/>
                            </div>
                            <field name="offer_ids" readonly="state in ('offer_accepted', 'sold', 'cancelled')"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>


    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate_property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="living_area" string="Living Area"
                       filter_domain="[('living_area', '>=', self)]"/>
                <field name="bedrooms"
                       string="Bedrooms"
                       filter_domain="[('bedrooms', '=', self)]"/>

                <field name="postcode"
                       string="Postcode"
                       filter_domain="[('postcode', 'ilike', self)]"/>

                <field name="name"
                       string="Name"
                       filter_domain="[('name', 'ilike', self)]"/>

                <field name="property_type_id"
                       string="Property Type"
                       filter_domain="[('property_type_id', 'ilike', self)]"/>

                <field name="expected_price"
                       string="Price"
                       filter_domain="[('expected_price', '=', self)]"/>
                <field name="facades"
                       string="Facades"
                       filter_domain="[('facades', 'ilike', self)]"/>

                <separator/>
                <filter string="Date availability" name="date_availability"
                        domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <filter name="available" string="Available" domain="[('state', '=', 'new')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode"
                            context="{'group_by':'postcode'}"/>
                </group>

            </search>
        </field>
    </record>


    <record id="estate.property_kanban" model="ir.ui.view">
        <field name="name">estate_property.reason.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <strong><field name="name"/> <field name="unique_number" widget="badge"/>
                                </strong>
                                <br/>
                                <t t-if="record.state.raw_value == 'sold'">
                                    <span style="background-color: green; color: white; padding: 2px 4px; border-radius: 4px;">
                                        Sold</span>
                                </t>
                                <t t-if="record.state.raw_value == 'new'">
                                    <span style="background-color: violet; color: white; padding: 2px 4px; border-radius: 4px;">
                                        New</span>
                                </t>
                                <t t-if="record.state.raw_value == 'offer_received'">
                                    <span style="background-color: blue; color: white; padding: 2px 4px; border-radius: 4px;">
                                        Offer Received</span>
                                </t>
                                <t t-if="record.state.raw_value == 'offer_accepted'">
                                    <span style="background-color: yellow; color: black; padding: 2px 4px; border-radius: 4px;">
                                        Offer Accepted</span>
                                </t>
                                <t t-if="record.state.raw_value == 'cancelled'">
                                    <span style="background-color: red; color: white; padding: 2px 4px; border-radius: 4px;">
                                        Cancelled</span>
                                </t>


                                <br/>
                                <div class="d-flex align-items-center">
                                    <field name="is_favourite" widget="boolean_toggle"/>
                                    <span class="ms-1">Favourite</span>
                                </div>

                                <t t-if="record.state.raw_value == 'offer_received'">
                                    <div>Best Price: <field name="best_price"/></div></t>

                                Expected Price: <field name="expected_price"/>
                                <t t-if="record.state.raw_value == 'offer_accepted'">
                                    <div>Selling Price: <field name="selling_price"/></div>
                                </t>

                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_available': True}</field>
    </record>
</odoo>
