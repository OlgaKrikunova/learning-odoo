<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--    подшаблон-->
    <template id="offer_table" name="Offer Table">
        <t t-name="estate.offer_table">
            <table class="table table-sm" style="margin-top: 30px;">
                <thead>
                    <tr>
                        <th style="font-weight: bold; font-size: 17px; padding-top: 10px;">Price</th>
                        <th style="font-weight: bold; font-size: 17px; padding-top: 10px;">Buyers</th>
                        <th style="font-weight: bold; font-size: 17px; padding-top: 10px;">
                            Validity(days)
                        </th>
                        <th style="font-weight: bold; font-size: 17px; padding-top: 10px;">Deadline</th>
                        <th style="font-weight: bold; font-size: 17px; padding-top: 10px;">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-if="property.offer_ids">
                        <tr t-foreach="property.offer_ids" t-as="offer">
                            <td>
                                <span t-field="offer.price"/>
                            </td>
                            <td>
                                <span t-field="offer.partner_id.name"/>
                            </td>
                            <td>
                                <span t-field="offer.validity"/>
                            </td>
                            <td>
                                <span t-field="offer.date_deadline"/>
                            </td>
                            <td>
                                <span t-esc="dict(offer._fields['status'].selection).get(offer.status)"
                                      t-att-style="
                                                'color: green;' if offer.status == 'accepted' else
                                                'color: red;' if offer.status == 'refused' else
                                                'color: gray;'"/>
                            </td>
                        </tr>
                    </t>
                    <t t-else="">
                        <tr>
                            <td colspan="5" style="text-align: center; font-weight: bold; font-size: 20px;
                                        color: red;">
                                <strong>No offers have been made yet.</strong>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>


    <!--     основной шаблон-->
    <template id="report_property_offers">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="property">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 style="margin-top: 50px;">
                            <span t-field="property.name"/>
                        </h2>
                        <div><strong>Salesman: </strong> <span t-field="property.salesman_id.name"/></div>
                        <div><strong>Expected Price: </strong> <span t-field="property.expected_price"/></div>
                        <div><strong>Status: </strong> <span t-field="property.state"/></div>
                        <t t-call="estate.offer_table"/>

                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="property_user_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="user">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Properties Report for <span t-field="user.name"/></h2>
                        <t t-set="properties" t-value="env['estate.property'].search([('salesman_id', '=', user.id)])"/>
                        <t t-if="properties">
                            <t t-foreach="properties" t-as="property">
                                <div style="margin-top:20px;">
                                    <strong>Property:</strong> <span t-field="property.name"/><br/>
                                    <strong>Expected Price:</strong> <span t-field="property.expected_price"/><br/>
                                    <strong>Status:</strong> <span t-field="property.state"/>
                                </div>

                                <t t-call="estate.offer_table">
                                    <t t-set="offers" t-value="property.offer_ids"/>
                                </t>
                            </t>
                        </t>
                        <t t-else="">
                            <p style="color:red; font-weight:bold;">This user has no properties.</p>
                        </t>

                    </div>
                </t>

            </t>
        </t>
    </template>

</odoo>
