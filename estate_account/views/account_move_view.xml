<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_view_inherit_form_" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_outstanding_credits_debits_widget" position="after">
                <group colspan="4">
                    <group class="oe_subtotal_footer">
                        <field name="total_with_tax" style="font-weight: bold; font-size: 20px;"
                               invisible="amount_tax==0"/>
                    </group>
                </group>
            </field>

        </field>
    </record>

    <record id="view_invoice_tree_inherit" model="ir.ui.view">
        <field name="name">account.invoice.list</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_send_and_print']" position="after">
                <button name="delete_draft_invoices" type="object"
                        string="Delete Draft Invoices" class="btn-secondary" confirm="Are you sure?"/>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_shipping_method_inherit" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
             <xpath expr="//page[@name='other_info']//group[@name='sale_info_group']/field[@name='delivery_date']" position="after">
                    <field name="shipping_method"/>
            </xpath>
        </field>
    </record>


</odoo>
