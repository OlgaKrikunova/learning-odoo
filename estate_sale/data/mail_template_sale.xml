<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="mail_template_sale_internal_email" model="mail.template">
            <field name="name">Sales: Internal Email</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">{{ object.company_id.name }}</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 12px;">
                        Hello,
                        <br/><br/>
                        Payment indicating the order amount is being processed.
                        The order will be confirmed after payment confirmation.
                        <br/>
                        Do not hesitate to contact us if you have any questions.
                        <br/><br/>
                        Olga

                    <br/><br/>
                </p>
            </div>
            </field>
        </record>
    </data>

</odoo>
