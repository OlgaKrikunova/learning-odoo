<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="property_offer_cron" model="ir.cron">
        <field name="name">Expire Old Offers</field>
        <field name="model_id" ref="model_estate_property_offer"/>
        <field name="state">code</field>
        <field name="code">model.check_expired_offers()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="priority">8</field>
        <field name="active">True</field>
        <field name="nextcall">2025-10-02 02:00:00</field>
    </record>

    <record id="property_reminders_old_offers_cron" model="ir.cron">
            <field name="name">Automatic reminders about old offers</field>
            <field name="model_id" ref="model_estate_property_offer"/>
            <field name="state">code</field>
            <field name="code">model.check_old_offers_more_seven_days()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="priority">8</field>
            <field name="active">True</field>
            <field name="nextcall">2025-10-04 02:00:00</field>
    </record>


    <record id="property_update_price_old_offers_cron" model="ir.cron">
            <field name="name">Automatic price increase for offers older than 30 days</field>
            <field name="model_id" ref="model_estate_property_offer"/>
            <field name="state">code</field>
            <field name="code">model.update_price_old_offers()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="priority">8</field>
            <field name="active">True</field>
            <field name="nextcall">2025-10-29 02:00:00</field>
    </record>



</odoo>
