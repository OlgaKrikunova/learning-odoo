<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="estate_partner_view_inherit_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='comment']" position="after">
               <field name="manager_comment"/>
            </xpath>
            <xpath expr="//page[@name='internal_notes']/field[@name='comment']" position="replace">
               <group>
                   <field name="manager_comment"  placeholder="Manager comment..."/>
                   <field name="comment" placeholder="Internal notes..."/>
               </group>
            </xpath>
        </field>
    </record>


</odoo>
